<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "test suite">
    <test name = "run smoke and regression and rest tests">
        <groups>
            <run>
                <include name = "smoke" />
                <include name = "regression" />
                <include name = "rest" />
            </run>
        </groups>
        <packages>
            <package name="com.pepgo.tests"/>
        </packages>
    </test>
</suite>